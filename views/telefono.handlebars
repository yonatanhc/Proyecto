
{{#each listaTelefonos}}
<div class="telefono" id="telefono" >
    <img src="img/{{this.imagen}}" id="imagen" width="200px" height="250px" onclick="mostrarDatos('{{this.modelo}}')">
    <div class="caracteristicas">
        <p id="modelo">{{this.modelo}}</p>
        <p id="precio">{{this.precio}}</p> 
    </div> 
    <button class="carrito" onclick="carrito('{{this.modelo}}','{{this.precio}}')">Agregar al carrito</button>
</div> 
{{/each}}

<script>
    function mostrarDatos(modelo){
        let url = "/homeTelefono?"
        url += "modelo=" + modelo;
        location = url;
    }

    function carrito(modelo,precio){
        let url = "/carrito?"
        url += "modelo=" + modelo + "&"+"precio=" + precio;
        location = url;
    }
</script>
