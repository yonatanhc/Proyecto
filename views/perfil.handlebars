<div class="datos-perfil">
    <h1>Bienvenido {{usuario.usuario}}</h1>
</div>
<div class="carrito-perfil">
    <h1>Carrito</h1>
    {{#each carrito}}
        <div class="nuevo-producto">{{this.modelo}}</div>
        <div class="precio-producto">$ {{this.precio}}</div>
    {{/each}}
</div>
<div class="div-comprar">
    <h1>Total</h1>
    <h1>$ {{total}}</h1>
    <button class="comprar">Comprar</button>
</div>

<script>
    const salir = document.getElementById("salir");
    salir.classList.remove("oculto");
    salir.onclick = function(){
        location = '/salir';
    }
</script>